@page
@model EnrollmentModel

@{
    ViewData["Title"] = "Students with Enrollments";
}

<h1>Students and Their Enrollments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Enrolled Courses</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.Email</td>
                <td>
                    @if (student.Courses.Any())
                    {
                        <ul>
                            @foreach (var course in student.Courses)
                            {
                                <li>
                                    @course.Name
                                    <form asp-controller="Enrollment" asp-action="Unenroll" method="post" style="display:inline;">
                                        <input type="hidden" name="studentId" value="@student.StudentId" />
                                        <input type="hidden" name="courseId" value="@course.CourseId" />
                                        <button type="submit" class="btn btn-danger btn-sm">Unenroll</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No enrollments</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>